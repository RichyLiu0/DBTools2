                            </td>
                            @foreach (var m in cfg.ListCols)
                            {
                                <text>
                                 <td align="right">
                                     @(Html.Raw(m.IsSum ? "<%=vm.Sum_Page.Sum{0}.ToString(\"N2\")%>".FormatWith(m.Name) : ""))
                                 </td>
                                </text>
                            }
                                <td></td>
                        </tr>
                        <%if (vm.IsSum)
                          {%>

                        <tr>
                            <td style="color: red">
                                <b>总计</b>
                            </td>
                           @foreach (var m in cfg.ListCols)
                           {
                                  <td align="right"> 
                                  @(Html.Raw(m.IsSum ? " <%=vm.Sum.Sum{0}.ToString(\"N2\")%>".FormatWith(m.Name) : ""))
